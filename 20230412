#include <stdio.h>
#define _CRT_

void main() {
	int a;
	int b;
	char op;

	printf("num?");
	scanf_s("%d %d", &a, &b);
	while (getchar() != '\n');
	printf("?");
	scanf_s("%c", &op);

	switch (op)
	{

	case '+':
		printf("%d + %d = %d \n", a, b, a + b);
		break;
	case '-':
		printf("%d - %d= %d \n", a, b, a - b);
		break;
	case '/':
		printf("%d / %d = %d \n", a, b, a / b);
		break;
	case '*':
		printf("%d * %d = %d \n", a, b, a*b);
		break;

	default:
		printf("error");
		break;
		
	}
